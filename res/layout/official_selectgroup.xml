<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/main_head" />
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:id="@+id/usecardate"
	    android:alpha="0.7"
	    >
	     <TextView
	 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:textSize="18sp"
	      android:textColor="@color/black2"
	      android:layout_centerVertical="true"
	      android:text="选择车型"
	    />
	    </RelativeLayout>  
	    
        <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical"
	    >
	       <ImageView
		      android:layout_width="fill_parent"
		      android:layout_height="1dip"
		      android:background="@color/user_divider3"
		      />
		   <RelativeLayout 
		    android:id="@+id/select1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		  
		    android:paddingBottom="10dip"
		    android:background="@color/white"
		    >
		      <ImageView
		         android:id="@+id/iv1"
		      android:layout_width="90dip"
		      android:layout_height="80dip"
		      android:layout_marginLeft="10dip"
		      android:background="@drawable/public_car"
		      android:layout_marginTop="10dip"
		      android:layout_marginBottom="10dip"
		       />
		        <LinearLayout 
		             android:layout_marginTop="10dip"
		         android:layout_toRightOf="@+id/iv1"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			    >
			     <LinearLayout 
			         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:orientation="horizontal"
				    android:layout_marginTop="10dip"
				    android:layout_marginBottom="10dip"
				    >
				    <TextView
		                android:id="@+id/type1"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/black"
				
				    />
				    <TextView
		              android:id="@+id/price1"
				      android:layout_width="90dip"
				      android:layout_height="30dip"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/text_green"
				      android:text="@string/discount"
				      android:gravity="center"
				      android:background="@drawable/rectangle2"
				    />
				    <TextView
		              
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="16sp"
				      android:textColor="@color/black2"
				      android:text="奥迪A6"
				    />
			    </LinearLayout>
			    <LinearLayout
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			         android:layout_marginLeft="10dip"
			        android:orientation="horizontal" >
			        <TextView 
			       
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:textColor="@color/black2"
			            android:layout_gravity="center"
			            android:text="数量"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/minus"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="-"
			            android:background="@drawable/rectangle2"
			            android:layout_marginRight="5dip"
			            android:layout_gravity="center"
			            />
			        <TextView 
			            android:id="@+id/amount"
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            android:text="1"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/plus"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="+"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            />
			       
			     </LinearLayout>
			    </LinearLayout>
               <ImageView
                android:id="@+id/ivselect"
		        android:layout_width="50dip"
		        android:layout_height="50dip"
		        android:background="@drawable/selectcar2"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
                />
              </RelativeLayout>   
              <ImageView         
		      android:layout_width="fill_parent"
		      android:layout_height="1dip"
		      android:background="@color/user_divider3"
		      />
              <RelativeLayout 
		    android:id="@+id/select2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    android:background="@color/white"
	
		    android:paddingBottom="10dip"
		    >
		      <ImageView
	          android:id="@+id/iv2"
		      android:layout_width="90dip"
		      android:layout_height="80dip"
		      android:layout_marginLeft="10dip"
		      android:background="@drawable/public_car"
		      android:layout_marginTop="10dip"
		      android:layout_marginBottom="10dip"
		       />
		        <LinearLayout 
		            android:layout_toRightOf="@+id/iv2"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			     android:layout_marginTop="10dip"
			    >
			     <LinearLayout 
			         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:orientation="horizontal"
				    android:layout_marginTop="10dip"
				    android:layout_marginBottom="10dip"
				    >
				    <TextView
		              android:id="@+id/type2"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/black"

				    />
				    <TextView
		              android:id="@+id/price2"
				      android:layout_width="90dip"
				      android:layout_height="30dip"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/text_green"
				      android:text="@string/discount"
				      android:gravity="center"
				      android:background="@drawable/rectangle2"
				    />
				    <TextView
		              
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="16sp"
				      android:textColor="@color/black2"
				      android:text="奥迪A6"
				    />
			    </LinearLayout>
			   <LinearLayout
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			         android:layout_marginLeft="10dip"
			        android:orientation="horizontal" >
			        <TextView 
			       
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:textColor="@color/black2"
			            android:layout_gravity="center"
			            android:text="数量"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/minus2"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="-"
			            android:background="@drawable/rectangle2"
			            android:layout_marginRight="5dip"
			            android:layout_gravity="center"
			            />
			        <TextView 
			            android:id="@+id/amount2"
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            android:text="1"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/plus2"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="+"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            />
			       
			     </LinearLayout>
			    </LinearLayout>
               <ImageView
                android:id="@+id/ivselect2"
		        android:layout_width="50dip"
		        android:layout_height="50dip"
		        android:background="@drawable/selectcar2"
		        android:visibility="gone"
		         android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
                />
              </RelativeLayout>   
              <ImageView
		      android:layout_width="fill_parent"
		      android:layout_height="1dip"
		      android:background="@color/user_divider3"
		      />
              <RelativeLayout 
		    android:id="@+id/select3"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    android:background="@color/white"
	
		    android:paddingBottom="10dip"
		    >
		      <ImageView
		       android:id="@+id/iv3"
		      android:layout_width="90dip"
		      android:layout_height="80dip"
		      android:layout_marginLeft="10dip"
		      android:background="@drawable/public_car"
		      android:layout_marginTop="10dip"
		      android:layout_marginBottom="10dip"
		       />
		        <LinearLayout 
		             android:layout_marginTop="10dip"
		            android:layout_toRightOf="@+id/iv3"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:orientation="vertical"
			    >
			     <LinearLayout 
			         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:orientation="horizontal"
				    android:layout_marginTop="10dip"
				    android:layout_marginBottom="10dip"
				    >
				    <TextView
		                android:id="@+id/type3"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/black"
				  
				    />
				    <TextView
		              android:id="@+id/price3"
				      android:layout_width="90dip"
				      android:layout_height="30dip"
				      android:layout_marginLeft="10dip"
				      android:textSize="18sp"
				      android:textColor="@color/text_green"
				      android:text="@string/discount"
				      android:gravity="center"
				      android:background="@drawable/rectangle2"
				    />
				    <TextView
		              
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:layout_marginLeft="10dip"
				      android:textSize="16sp"
				      android:textColor="@color/black2"
				      android:text="奥迪A6"
				    />
			    </LinearLayout>
			    <LinearLayout
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			         android:layout_marginLeft="10dip"
			        android:orientation="horizontal" >
			        <TextView 
			       
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:textColor="@color/black2"
			            android:layout_gravity="center"
			            android:text="数量"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/minus3"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="-"
			            android:background="@drawable/rectangle2"
			            android:layout_marginRight="5dip"
			            android:layout_gravity="center"
			            />
			        <TextView 
			            android:id="@+id/amount3"
			            android:layout_width="40dip"
			            android:layout_height="30dip"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            android:text="1"
			            android:textSize="16sp"
			            android:gravity="center"
			            android:layout_marginRight="5dip"
			            />
			       <Button 
			            android:id="@+id/plus3"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:text="+"
			            android:background="@drawable/rectangle2"
			            android:layout_gravity="center"
			            />
			       
			     </LinearLayout>
			    </LinearLayout>
               <ImageView
                android:id="@+id/ivselect3"
		        android:layout_width="50dip"
		        android:layout_height="50dip"
		        android:background="@drawable/selectcar2"
		        android:visibility="gone"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
                />
              </RelativeLayout>   
              <ImageView         
		      android:layout_width="fill_parent"
		      android:layout_height="1dip"
		      android:background="@color/user_divider3"
		      />
       </LinearLayout>
       <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    >
        <com.lc.progressbutton.CircularProgressButton
        android:id="@+id/Search"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginBottom="50dip"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_textComplete="马上预约"
        app:cpb_textError="错误"
        app:cpb_textIdle="马上预约" 
        app:cpb_selectorIdle="@drawable/idle_state_selector"
        app:cpb_selectorComplete="@drawable/complete_state_selector"
        app:cpb_selectorError="@drawable/error_state_selector"/>
        </RelativeLayout>
	  
</LinearLayout>