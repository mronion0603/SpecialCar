<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listViewAttr="http://schemas.android.com/apk/res/com.lc.specialcar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >
    <include layout="@layout/main_head" />
    <ProgressBar     
	    android:id="@+id/progress2"    
	    style="?android:attr/progressBarStyleLarge"    
	    android:layout_width="wrap_content"    
	    android:layout_height="wrap_content"    
	    android:max="100"     
	    android:progress="50"     
	    android:secondaryProgress="70"    
	    android:layout_marginTop="50dip"
	    android:layout_gravity="center"
	    android:gravity="center" 
	    /> 
	     <ImageView     
	    android:id="@+id/imgbg"    
	    android:layout_width="wrap_content"    
	    android:layout_height="wrap_content"    
	    android:layout_marginTop="80dip"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:background="@drawable/nobalance"
	    android:visibility="gone"
	    /> 
	     <TextView     
	    android:id="@+id/tvbg"    
	    android:layout_width="wrap_content"    
	    android:layout_height="wrap_content"    
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:text="暂无明细"
	    android:textSize="18sp"
	    android:layout_marginTop="10dip"
	    android:textColor="@color/nomessage"
	    android:visibility="gone"
	    /> 
    <cn.trinea.android.common.view.DropDownListView
        android:id="@+id/listview"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"   
        android:drawSelectorOnTop="false"
        listViewAttr:isAutoLoadOnBottom="true"
        listViewAttr:isDropDownStyle="false"
        listViewAttr:isOnBottomStyle="true"
    />
</LinearLayout>