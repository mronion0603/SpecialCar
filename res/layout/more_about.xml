<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="#ffefebe7">
    <include layout="@layout/main_head" />
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="200dip"
    android:background="@color/bg_color"
    >
       
           <ImageView
            android:id="@+id/logoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_launcher"
            />
            <TextView
            android:id="@+id/logoimg1"
            android:layout_below="@+id/logoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_green"
            android:textSize="17sp"
            android:layout_marginTop="10dip"
            android:text="春泰公务专车"
            />
            <TextView
            android:layout_below="@+id/logoimg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black2"
            android:alpha="0.5"
            android:layout_marginTop="2dip"
            android:text="版本号: V1.0"
            />
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/callphone"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="#ffffff"
    >
       
           <TextView
            android:id="@+id/moresite"
            android:text="服务热线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textSize="18sp"
            />
           <TextView
            android:id="@+id/moresite2"
            android:layout_toRightOf="@+id/moresite"
            android:text="4000849488"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:textSize="18sp"

            />
    </RelativeLayout>
    <ImageView
	      android:layout_width="fill_parent"
	      android:layout_height="0.5dip"
	      android:layout_marginLeft="10dip"
	      android:layout_marginRight="10dip"
	      android:background="@color/bg_color"  
	    />
     <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="#ffffff"
    >
       
           <TextView
            android:id="@+id/morescore"
            android:text="官方网站"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textSize="18sp"
            android:background="@color/white"
            />
          <TextView
            android:id="@+id/moresite3"
            android:layout_toRightOf="@+id/morescore"
            android:text="www.ctzc.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:textSize="18sp"

            />
    </RelativeLayout>
       <ImageView
	      android:layout_width="fill_parent"
	      android:layout_height="0.5dip"
	      android:layout_marginLeft="10dip"
	      android:layout_marginRight="10dip"
	      android:background="@color/bg_color"  
	    />
 
</LinearLayout>