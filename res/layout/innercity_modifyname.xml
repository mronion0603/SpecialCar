<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/main_head" />
    <ImageView
          android:layout_marginTop="10dip"
	      android:layout_width="fill_parent"
	      android:layout_height="1dip"
	      android:background="@color/user_divider3"
	    /> 
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:id="@+id/moresafty"
	    android:background="@color/white"
	    >
	    <ImageView
	      android:id="@+id/moresaftyim"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	        android:layout_centerVertical="true"
	      android:background="@drawable/city_register_user2"  
	    />
	     <TextView
	      android:layout_toRightOf="@+id/moresaftyim"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:textSize="18sp"
	      android:textColor="@color/black"
	      android:layout_centerVertical="true"
	      android:text="姓名"
	    />
	     
	      <EditText
	      android:id="@+id/name"
	      android:layout_width="150dip"
	      android:layout_height="wrap_content"
	      android:layout_marginRight="20dip"
	      android:textSize="16sp"
	      android:textColor="@color/black"
	      android:layout_centerVertical="true"
	      android:layout_alignParentRight="true"
	      android:gravity="right"
	      android:text="小花"
	      android:background="@color/white"
	      android:singleLine="true"
	      />
	    </RelativeLayout>
	     <ImageView
	      android:layout_width="fill_parent"
	      android:layout_height="1dip"
	      android:background="@color/user_divider3"
	    />
	    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:id="@+id/morenotify"
	    android:background="@color/white"
	    >
	    <ImageView
	      android:id="@+id/morenotifyim"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:background="@drawable/edit_phone2"  
	        android:layout_centerVertical="true"
	    />
	     <TextView
	         
	      android:layout_toRightOf="@+id/morenotifyim"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:textSize="18sp"
	      android:textColor="@color/black"
	      android:layout_centerVertical="true"
	      android:text="手机号码"
	    />
	     
	     
	    <EditText
	      android:id="@+id/phone"
	      android:layout_width="150dip"
	      android:layout_height="wrap_content"
	      android:layout_marginRight="20dip"
	      android:textSize="16sp"
	      android:textColor="@color/black"
	      android:layout_centerVertical="true"
	       android:layout_alignParentRight="true"
	      android:text="14555555551"
	      android:background="@color/white"
	      android:gravity="right"
	      android:singleLine="true"
	      />
	    </RelativeLayout>   
	    <ImageView
	      android:layout_width="fill_parent"
	      android:layout_height="1dip"
	      android:background="@color/user_divider3"
	    /> 
        <ImageView
          android:layout_marginTop="20dip"
	      android:layout_width="fill_parent"
	      android:layout_height="1dip"
	      android:background="@color/user_divider3"
	    />
	    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:id="@+id/usecardate"
	    android:background="@color/white"
	    >
	    <ImageView
	      android:id="@+id/date"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:background="@drawable/edit_note2"  
	        android:layout_centerVertical="true"
	    />
	     <TextView
	      android:layout_toRightOf="@+id/date"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dip"
	      android:textSize="18sp"
	      android:textColor="@color/black"
	      android:layout_centerVertical="true"
	      android:text="通讯录"
	    />
	     <ImageView
	      android:id="@+id/star"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginRight="20dip"
	      android:background="@drawable/arrows_2"
	      android:layout_alignParentRight="true"
	      android:layout_centerVertical="true"
	     />
	     
	    
	    </RelativeLayout>    
	     <ImageView
	      android:layout_width="fill_parent"
	      android:layout_height="1dip"
	      android:background="@color/user_divider3"
	     />
	   

            
	   
</LinearLayout>